#!/bin/sh
# src/sisl-config.  Generated from sisl-config.in by configure.

wmpi_libs="-L/home/ensmjc/Codes/lib -lwmpi_s -lglib-2.0 -L/home/ensmjc/Codes/lib -lglib-2.0 -lm"
wmpi_cflags="-I/usr/include/glib-2.0 -I/usr/lib64/glib-2.0/include -I/home/ensmjc/Codes/include"
gsl_libs="-lgsl -lgslcblas -lm"
gsl_cflags=""
blas_libs="-lcblas -lf77blas -latlas"
lapack_libs="-llapack"
sisl_cppflags=""

prefix=/home/ensmjc/Codes
exec_prefix=${prefix}
includedir=${prefix}/include

usage()
{
	cat <<EOF
Usage: sisl-config [OPTIONS] [LIBRARIES]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
	[--check]
Libraries:
	sisl
EOF
	exit $1
}

uniquify()
{
    echo $1 | awk '{
	for (i = 1; i <= NF; i++) {
	    unique = 1;
	    for (j = i + 1; j <= NF && unique; j++)
		if ($i == $j)
		    unique = 0;
            if (unique)
		printf ("%s ", $i);
	}
    }'
}

if test $# -eq 0; then
	usage 1 1>&2
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo 0.1.1
      exit 0
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    --check)
      echo_check=yes
      ;;
    sisl)
      lib_sisl=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi
if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi
if test "$echo_cflags" = "yes"; then
	sisl_cflags="$gsl_cflags $wmpi_cflags -I${prefix}/include"
	sisl_cflags=`uniquify "$sisl_cflags"`
	echo $sisl_cppflags $sisl_cflags
fi
if test "$echo_libs" = "yes"; then
	sisl_libs="-L${exec_prefix}/lib -lsisl  -lgsl -lgslcblas -lm  -lm $wmpi_libs"
	sisl_libs=`uniquify "$sisl_libs"`
	echo -L${exec_prefix}/lib -lsisl -lgsl -lgslcblas -lm -llapack -lcblas -lf77blas -latlas -lm   -L/usr/lib64/gcc/x86_64-slackware-linux/8.2.0 -L/usr/lib64/gcc/x86_64-slackware-linux/8.2.0/../../../../lib64 -L/lib/../lib64 -L/usr/lib/../lib64 -L/usr/lib64/gcc/x86_64-slackware-linux/8.2.0/../../.. -lgfortran -lm -lquadmath
fi
